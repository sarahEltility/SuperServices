<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#192781" />
            <gradient android:angle="-90" android:startColor="#11124e" android:endColor="#1f23a3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1a2350" />
            <solid android:color="#181e54"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1d1456" />
            <gradient android:angle="-90" android:startColor="#24307b" android:endColor="#182150" />
        </shape>
    </item>
</selector>