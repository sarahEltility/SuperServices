<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/list_row_container_Sent_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_item_Sent_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:text="Cancel request"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/common_full_open_on_phone"
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textAllCaps="false"

                android:id="@+id/button_in_card_view_sent_request"

                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/fullname_item_Sent_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mahmoud Ashraf"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_alignBottom="@+id/button_in_card_view_sent_request"
                android:layout_toRightOf="@+id/image_item_Sent_request"
                android:layout_toEndOf="@+id/image_item_Sent_request" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>