<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sarah.superservices.UserProfile.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/user_progressBar_profile"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/userprofile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_btn"
            android:layout_centerHorizontal="true"
            android:text="ffffname"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/phone_number_following_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userprofile_name"
            android:layout_centerHorizontal="true"
            android:text="FFFFFFFFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/userprofile_number_following_follower"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userimageView2"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/usertextView_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:layout_toEndOf="@+id/userimageView2"
                        android:layout_toRightOf="@+id/userimageView2"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/userimageView2"
                        android:layout_alignLeft="@+id/usertextView_phone"
                        android:layout_alignStart="@+id/usertextView_phone"
                        android:text="Mobile"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userimageView3"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/usertextView_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:layout_toEndOf="@+id/userimageView3"
                        android:layout_toRightOf="@+id/userimageView3"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/userimageView3"
                        android:layout_alignLeft="@+id/usertextView_city"
                        android:layout_alignStart="@+id/usertextView_city"
                        android:text="City"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userimageView4"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/usertextView_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:layout_toEndOf="@+id/userimageView4"
                        android:layout_toRightOf="@+id/userimageView4"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/userimageView4"
                        android:layout_alignLeft="@+id/usertextView_email"
                        android:layout_alignStart="@+id/usertextView_email"
                        android:text="Email"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userimageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/usertextView_date_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginStart="21dp"
                        android:layout_toEndOf="@+id/userimageView5"
                        android:layout_toRightOf="@+id/userimageView5"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/userimageView5"
                        android:layout_alignLeft="@+id/usertextView_date_birth"
                        android:layout_alignStart="@+id/usertextView_date_birth"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/user_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"

            android:layout_below="@+id/user_progressBar_profile"


            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:drawableLeft="@drawable/common_full_open_on_phone"
            android:gravity="center"


            android:text="Follow"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15dp" />

    </RelativeLayout>
</ScrollView>
