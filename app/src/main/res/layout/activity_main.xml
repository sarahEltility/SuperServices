<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="1"
    tools:context="com.example.sarah.superservices.MainActivity"
    android:background="@drawable/lo">


    <TextView
        android:text="Super Services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:width="150dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:fontFamily="casual" />

    <TextView
        android:layout_width="387dp"
        android:layout_height="68dp"
        android:text="Welcom on Khalis Application for Services Deliver at Maximum speed and comfort"
        android:height="33dp"
        android:width="330dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/textView2"
        android:fontFamily="casual"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:height="22dp"
        android:width="150dp"
        android:fontFamily="casual"
        android:id="@+id/tvAdministration"
        android:linksClickable="true"
        android:textSize="17sp"
        android:hint="Admin"
        android:textColor="#ffffff"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:weightSum="1"
        android:layout_weight="0.35"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="40dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/mybutton"
            android:id="@+id/btnServiceProvider"
            android:text="ServiceProvider"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
        android:text="CUSTOMER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
            android:id="@+id/btncustomer"
            android:layout_below="@+id/btnServiceProvider"
            android:layout_marginTop="6dp" />
    </RelativeLayout>
</LinearLayout>




