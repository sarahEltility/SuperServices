<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_khalis__services"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/lo"
    tools:context="com.example.sarah.superservices.Khalis_Services">]


    <Button
        android:text="Home Maintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/btnHomeMaintenance"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:hint="Home Maintenance"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="COSMETOLOGY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCosmetology"
        android:layout_marginTop="14dp"
        android:hint="COSMETOLOGY"
        android:layout_below="@+id/btnConcertsPreprocessing"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:layout_alignLeft="@+id/btnConcertsPreprocessing"
        android:layout_alignStart="@+id/btnConcertsPreprocessing" />

    <Button
        android:text="concerts preprocessing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnConcertsPreprocessing"
        android:layout_marginTop="14dp"
        android:hint="concerts preprocessing"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:layout_below="@+id/btnHomeMaintenance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btnHomeMaintenance"
        android:layout_alignStart="@+id/btnHomeMaintenance" />
</RelativeLayout>
