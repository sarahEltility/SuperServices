<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sarah.superservices.Services.MainServices">

    <Button
        android:text="Home Maintenance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/btnHomeMaintenance"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:hint="Home Maintenance"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <Button
        android:text="COSMETOLOGY"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCosmetology"
        android:layout_marginTop="250dp"
        android:hint="COSMETOLOGY"
        android:layout_below="@+id/btnConcertsPreprocessing"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:text="concerts preprocessing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnConcertsPreprocessing"
        android:layout_marginTop="500dp"
        android:hint="concerts preprocessing"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
